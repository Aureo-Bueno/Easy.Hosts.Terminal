@model EasyHosts.Terminal.Models.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "Erro 404";
}
<main class="row">
    <div class="mt-5">
        <div class="card border-danger mb-5" style="max-width: 18rem;">
            <div class="card-header"><h1 class="text-danger">@ViewData["Title"]</h1></div>
            <div class="card-body text-danger">
                <h5 class="card-title">Danger card title</h5>
                <p class="card-text"><h2 class="text-danger">@*@Model.Message*@</h2></p>
                <strong>Request ID:</strong> <code>@*@Model.RequestId*@</code>
            </div>
        </div>
    </div>
</main>

