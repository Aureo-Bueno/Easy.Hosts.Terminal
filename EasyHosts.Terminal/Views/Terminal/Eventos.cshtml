@model IEnumerable<EasyHosts.Terminal.Models.Event>

@{
    ViewData["Title"] = "Eventos";
}

<header>
    <div class="mt-5">
        <h1 class="text-center fw-bold">@ViewData["Title"]</h1>
        <hr class="bg-black" />
    </div>
</header>

@if (Model.Count() == 0)
{
    <div class="card text-center shadow bg-body rounded">
        <div class="card-header">
            Nao ha eventos registrados
        </div>
        <div class="card-body">
            <h5 class="card-title">No Momento nao temos eventos em nosso sistema!</h5>
            <p class="card-text">Volte para o menu de opcoes</p>
            @Html.ActionLink("Voltar", "Menu", "Terminal", new { area = "" }, new { @class = "btn btn-primary" })
        </div>
        <div class="card-footer text-muted">
            Atualizado em: <strong>@DateTime.Now.ToString("dd/MM/yyyy")</strong>
        </div>
    </div>
}
else
{
    @Html.DisplayNameFor(model => model.NameEvent)

    foreach (var item in Model)
    {
        @Html.DisplayFor(modelItem => item.NameEvent)
        @Html.DisplayFor(modelItem => item.Organizer)
        @Html.DisplayFor(modelItem => item.DateEvent)
        @Html.DisplayFor(modelItem => item.EventsPlace)
        @Html.DisplayFor(modelItem => item.DescriptionEvent)
        @Html.DisplayFor(modelItem => item.Attractions)
    }
}
