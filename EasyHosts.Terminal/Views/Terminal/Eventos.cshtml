@model IEnumerable<EasyHosts.Terminal.Models.Event>
@using EasyHosts.Terminal.Models.Enums;
@{
    ViewData["Title"] = "Eventos";
}

<main>
    <section class="row section-gallery text-center">

        <div class="title my-5">
            <h1>Nossas Opções</h1>
        </div>
        @if (Model.Count() == 0)
        {
            <div class="d-flex justify-content-center col-sm-3 col-md-3 col-lg-3">
                <div class="card text-center shadow bg-body rounded m-2">
                    <div class="card-header">
                        No momento não temos eventos em nosso sistema!
                    </div>
                    <div class="card-body">
                        <p class="card-text">Volte para o menu de opções.</p>
                        @Html.ActionLink("Voltar", "Menu", "Terminal", new { area = "" }, new { @class = "btn btn-primary" })
                    </div>
                    <div class="card-footer text-muted">
                        Atualizado em: <strong>@DateTime.Now.ToString("dd/MM/yyyy")</strong>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body">
                    <h1>@ViewData["Title"] de Show</h1>
                </div>
            </div>

            foreach (var item in Model)
            {
                if (item.TypeEvent == EventType.Show)
                {
                    <div class="d-flex justify-content-center col-sm-6 col-md-4 col-lg-3">
                        <div class="card rounded-3 m-2" style="width: 22rem;">
                            <img src="https://picsum.photos/230/280" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">Card title</h5>
                                <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                            </div>
                        </div>
                    </div>
                }

            }
            <div class="card">
                <div class="card-body">
                    <h1>@ViewData["Title"] de Comedia</h1>
                </div>
            </div>
            foreach (var item in Model)
            {
                if (item.TypeEvent == EventType.Comedia)
                {
                    <div class="d-flex justify-content-center col-sm-6 col-md-4 col-lg-3">
                        <div class="card rounded-3 m-2" style="width: 22rem;">
                            <img src="https://picsum.photos/230/280" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">Card title</h5>
                                <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                            </div>
                        </div>
                    </div>
                }

            }
            <div class="card">
                <div class="card-body">
                    <h1>@ViewData["Title"] de Religiao</h1>
                </div>
            </div>
            foreach (var item in Model)
            {
                if (item.TypeEvent == EventType.EventosReligiosos)
                {


                    <div class="d-flex justify-content-center col-sm-6 col-md-4 col-lg-3">
                        <div class="card rounded-3 m-2" style="width: 22rem;">
                            <img src="https://picsum.photos/230/280" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">Card title</h5>
                                <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                            </div>
                        </div>
                    </div>
                }
            }
        }

    </section>
</main>
