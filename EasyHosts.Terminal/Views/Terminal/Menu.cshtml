@model EasyHosts.Terminal.Models.ViewModels.CheckinCheckoutViewModel
@{
    ViewBag.Title = "Menu";
}

<header>
    <div class="card">
        <div class="card-body">
            <h1 class="text-center mt-2 mb-2 fw-bold">Menu</h1>
            <hr class="bg-dark" />
        </div>
    </div>
</header>

<main class="d-flex justify-content-around">
    <div class="lineone">
        <div class="mt-3">
            <a href="@Url.Action("Quartos", "Terminal", new { area = "" })">
                <div class="card bg-dark text-white" style="width: 20rem;">
                    <img src="~/Uploads/Quartos.jpg" class="card-img rounded" alt="...">
                    <div class="card-img-overlay">
                        <h5 class="card-title">
                        </h5>
                    </div>
                </div>
            </a>
        </div>
        <div class="mt-3">
            <a href="@Url.Action("Eventos", "Terminal", new { area = "" })">
                <div class="card bg-dark text-white" style="width: 20rem;">
                    <img src="~/Uploads/Eventos.jpg" class="card-img rounded" alt="...">
                    <div class="card-img-overlay">
                        <h5 class="card-title">
                        </h5>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="linetwo">
        <div class="mt-3">
            <div class="card bg-dark text-white" style="width: 20rem;" data-bs-toggle="modal" data-bs-target="#formularioCheckin">
                <img src="~/Uploads/Checkin.png" class="card-img rounded" alt="...">
                <div class="card-img-overlay">
                    <h5 class="card-title">
                        <span></span>
                    </h5>
                </div>
            </div>
        </div>
        <div class="mt-3 mb-1">
            <a href="@Url.Action("Checkout", "Terminal", new { area = "" })">
                <div class="card bg-dark text-white" style="width: 20rem;">
                    <img src="~/Uploads/Checkout.png" class="card-img rounded" alt="...">
                    <div class="card-img-overlay">
                        <h5 class="card-title">
                        </h5>
                    </div>
                </div>
            </a>
        </div>
    </div>
</main>

<div class="modal fade" id="formularioCheckin" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Fazer Checkin</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Checkin", "Terminal", null, FormMethod.Post, new { @class = "row g-3" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Checkin.Booking.CodeBooking, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Checkin.Booking.CodeBooking, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Checkin.Booking.CodeBooking, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Checkin.User.Cpf, htmlAttributes: new { @class = "control-label col-md-2" })

                        @Html.EditorFor(model => model.Checkin.User.Cpf, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Checkin.User.Cpf, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-12">
                        <input type="submit" value="Checkin" class="btn btn-success" />
                    </div>
                }

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>
